<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sidebar_bg"
    android:descendantFocusability="blocksDescendants">

    <ListView
        android:id="@+id/plates_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/lightgray"
        android:dividerHeight="1dip" />


    <RelativeLayout
        android:id="@+id/plate_bottom_layour"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#80000000">

        <!-- This will be your overlay so here you can add your login button ect -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/plate_num_total"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/circle_bg"
                android:gravity="center"
                android:shadowRadius="10.0"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/confirm_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/confirm_choice"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_style"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>